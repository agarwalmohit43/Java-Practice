package inputOutputSCJP;

import java.io.File;
import java.io.FileReader;
import java.io.IOException;

public class FileWriter {

	public static void main(String[] args) {

		
		try{
			File file=new File("F:\\Java\\scjp\\fileWriter.txt");
			
			if(!(file.exists()))
			{
				System.out.println("File Not Found Creating New");
				file.createNewFile();
			}else{
				System.out.println("File Exists");
				writeToFile(file);
				readFromFile(file);
			}
		}catch(Exception e){
			e.printStackTrace();
		}
	}

	private static void readFromFile(File file) {
		char[] character=new char[50];
		int size=0;
		try{
			FileReader fr=new FileReader(file);
			size=fr.read(character);
			System.out.println(size);
			for(char c: character){
				System.out.print(c);
			}
			fr.close();
		}catch(Exception e){
			e.printStackTrace();
		}
		
	}

	private static void writeToFile(File file) {
		
		try{
			java.io.FileWriter fw=new java.io.FileWriter(file);
			fw.write("Mohit\tKumar");
			fw.flush();
			fw.close();
		}catch(Exception e){
			e.printStackTrace();
		}
		
	}

}
