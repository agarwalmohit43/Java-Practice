@Controller
public class HelloController{
	
		public ModelAndView helloWorld(){
			ModelAndView modelAndView=new ModelAndView("HelloPage");
			modelAndView.addObject("WelcomeMessage","Hi welcome");
			
			return modelAndView;
		}
}